<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30dp">

    <TextView
        android:id="@+id/tv_favorite_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="@style/title1"
        android:textColor="@color/pure_black_151515"
        app:layout_constraintBottom_toTopOf="@id/tv_favorite_creator_name_and_upload_date"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_video_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="대프리카지만 괜찮아... 느좋 대구 여행
기 어쩌구저쩌구 ...제목이 긴 경우가 많아서..." />

    <ImageView
        android:id="@+id/iv_favorite_video_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_stroke_gray200_radius_12dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_favorite_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/iv_favorite_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/btn_favorite_red"
        app:layout_constraintEnd_toEndOf="@id/iv_favorite_video_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_favorite_video_thumbnail"
        tools:src="@drawable/ic_heart_pressed" />

    <ImageView
        android:id="@+id/iv_favorite_creator_thumbnail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@id/tv_favorite_title"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_title"
        tools:src="@drawable/ic_youtuber_badge" />

    <TextView
        android:id="@+id/tv_favorite_creator_name_and_upload_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="@style/info1"
        android:textColor="@color/gray_300_5b5b5b"
        app:layout_constraintBottom_toBottomOf="@id/iv_favorite_creator_thumbnail"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_video_thumbnail"
        app:layout_constraintStart_toEndOf="@id/iv_favorite_creator_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_title"
        tools:text="뭉치즈 · 2024-07-25" />

    <TextView
        android:id="@+id/tv_favorite_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/info1"
        android:textColor="@color/gray_300_5b5b5b"
        app:layout_constraintStart_toStartOf="@id/iv_favorite_creator_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_creator_name_and_upload_date"
        tools:text="서울" />

    <TextView
        android:id="@+id/tv_favorite_total_place_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textAppearance="@style/info1"
        android:textColor="@color/gray_300_5b5b5b"
        app:layout_constraintStart_toEndOf="@id/tv_favorite_city"
        app:layout_constraintTop_toTopOf="@id/tv_favorite_city"
        tools:text="12개 장소" />

    <TextView
        android:id="@+id/tv_favorite_travel_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textAppearance="@style/info1"
        android:textColor="@color/gray_300_5b5b5b"
        app:layout_constraintStart_toEndOf="@id/tv_favorite_total_place_count"
        app:layout_constraintTop_toTopOf="@id/tv_favorite_total_place_count"
        tools:text="당일치기" />

</androidx.constraintlayout.widget.ConstraintLayout>