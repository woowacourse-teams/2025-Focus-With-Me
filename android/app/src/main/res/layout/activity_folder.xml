<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white_ffffff"
    tools:context=".ui.folder.FolderActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_folder_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_favorite_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/cl_folder_toolbar"
            app:layout_constraintStart_toStartOf="@id/cl_folder_toolbar"
            app:layout_constraintTop_toTopOf="@id/cl_folder_toolbar" />

        <TextView
            android:id="@+id/tv_folder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_title"
            android:textAppearance="@style/title1"
            android:textColor="@color/pure_black_151515"
            app:layout_constraintBottom_toBottomOf="@id/iv_favorite_back"
            app:layout_constraintEnd_toStartOf="@id/iv_folder_folder_plus"
            app:layout_constraintStart_toEndOf="@id/iv_favorite_back"
            app:layout_constraintTop_toTopOf="@id/iv_favorite_back" />

        <ImageView
            android:id="@+id/iv_folder_folder_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:contentDescription="@null"
            android:padding="16dp"
            android:src="@drawable/ic_folder_plus"
            app:layout_constraintBottom_toBottomOf="@id/tv_folder_title"
            app:layout_constraintEnd_toEndOf="@id/cl_folder_toolbar"
            app:layout_constraintTop_toTopOf="@id/tv_folder_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_folder_toolbar"
        tools:listitem="@layout/item_folder" />

</androidx.constraintlayout.widget.ConstraintLayout>