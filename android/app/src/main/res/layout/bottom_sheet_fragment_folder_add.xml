<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_bottom_sheet_folder_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:text="@string/bottom_sheet_folder_add_title"
        android:textAlignment="center"
        android:textAppearance="@style/title2"
        android:textColor="@color/pure_black_151515"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="폴더 추가" />

    <EditText
        android:id="@+id/et_bottom_sheet_folder_add_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@null"
        android:background="@drawable/bg_stroke_gray400_radius_10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/bottom_sheet_folder_add_folder_name_hint"
        android:inputType="text"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:textAppearance="@style/body2"
        android:textColor="@color/pure_black_151515"
        android:textColorHint="@color/gray_200_c1c1c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bottom_sheet_folder_add_title" />

    <TextView
        android:id="@+id/tv_bottom_sheet_folder_add_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/info2"
        android:textColor="@color/pure_red_FF383C"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/et_bottom_sheet_folder_add_folder_name"
        app:layout_constraintTop_toBottomOf="@id/et_bottom_sheet_folder_add_folder_name"
        tools:text="중복된 이름의 폴더가 이미 존재합니다." />

    <TextView
        android:id="@+id/tv_bottom_sheet_folder_add_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_confirm"
        android:enabled="false"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/all_confirm"
        android:textAppearance="@style/title3"
        android:textColor="@color/pure_white_ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bottom_sheet_folder_add_error" />

</androidx.constraintlayout.widget.ConstraintLayout>