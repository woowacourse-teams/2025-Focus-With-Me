<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.favorite.FavoritePlaceFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_place_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_place_folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_place_folder" />

    <ImageView
        android:id="@+id/iv_favorite_place_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_gray300_radius_10dp"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/ic_folder"
        app:layout_constraintBottom_toBottomOf="@id/rv_favorite_place_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_favorite_place_folder"
        app:layout_constraintTop_toTopOf="@id/rv_favorite_place_folder" />

</androidx.constraintlayout.widget.ConstraintLayout>