<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <ImageView
        android:id="@+id/iv_folder_edit_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="@id/cl_folder_edit_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_folder_edit_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_folder_edit_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_stroke_gray200_radius_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_folder_edit_remove"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_folder_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="12dp"
            android:textAppearance="@style/info1"
            android:textColor="@color/pure_black_151515"
            app:layout_constraintBottom_toBottomOf="@id/cl_folder_edit_item"
            app:layout_constraintEnd_toStartOf="@id/tv_folder_place_count"
            app:layout_constraintStart_toStartOf="@id/cl_folder_edit_item"
            app:layout_constraintTop_toTopOf="@id/cl_folder_edit_item"
            tools:text="제목 테스트 진행 중" />

        <TextView
            android:id="@+id/tv_folder_place_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/info2"
            android:textColor="@color/gray_300_5b5b5b"
            app:layout_constraintBottom_toBottomOf="@id/tv_folder_edit_name"
            app:layout_constraintEnd_toEndOf="@id/cl_folder_edit_item"
            app:layout_constraintTop_toTopOf="@id/tv_folder_edit_name"
            tools:text="장소 10개" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>